// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Match {
  id                String            @id @default(cuid())
  createdAt         DateTime          @default(now())
  team1             String
  team2             String
  score1            Int
  score2            Int
  team1RatingChange Float             @default(0)
  team2RatingChange Float             @default(0)
  team1Rating       Float             @default(0)
  team2Rating       Float             @default(0)
  comment           String
  game              String
  teamsize          Int
  season            Int               @default(1)
  achievements      TeamAchievement[]

  @@index(season)
  @@map("match")
}

model League {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String
  teams     Team[]
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   String

  @@unique(name)
  @@map("league")
}

model Team {
  id           String            @id @default(cuid())
  createdAt    DateTime          @default(now())
  name         String
  meta         TeamMeta[]
  achievements TeamAchievement[]
  league       League            @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId     String
  teamMembers  TeamMember[]

  @@unique(name)
  @@map("team")
}

model TeamMember {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  name      String

  @@unique([teamId, userId])
  @@map("team_member")
}

model TeamMeta {
  id                       String   @id @default(cuid())
  createdAt                DateTime @default(now())
  team                     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId                   String
  rating                   Float    @default(0)
  achievementPoints        Int      @default(0)
  totalMatches             Int      @default(0)
  totalWins                Int      @default(0)
  totalLosses              Int      @default(0)
  totalWinRate             Float    @default(0)
  totalScore               Int      @default(0)
  totalAvgScore            Float    @default(0)
  totalHighestRating       Float    @default(0)
  totalLowestRating        Float    @default(0)
  totalHighestWinStreak    Int      @default(0)
  totalHighestLosingStreak Int      @default(0)
  dailyMatches             Int      @default(0)
  dailyWins                Int      @default(0)
  dailyLosses              Int      @default(0)
  dailyWinRate             Float    @default(0)
  dailyScore               Int      @default(0)
  dailyAvgScore            Float    @default(0)
  currentWinStreak         Int      @default(0)
  currentLosingStreak      Int      @default(0)
  updatedAt                DateTime @default(now())

  @@map("team_meta")
}

model TeamAchievement {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId      String
  achievement String
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId     String

  @@index([matchId, teamId])
  @@map("team_achievement")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  teamMember    TeamMember[]
  leagues       League[]

  @@map("user")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_token")
}
