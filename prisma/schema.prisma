// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Match {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  team1     String
  team2     String
  score1    Int
  score2    Int
  rating1   Float
  rating2   Float
  comment   String
  game      String
  teamsize  Int

  @@map("match")
}

model Team {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  rating    Float
  game      String
  matches   Int
  wins      Int
  goals     Int
  teamsize  Int

  @@unique([name, game])
  @@map("team")
}
